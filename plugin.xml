<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.captureTest"
        version="0.0.1">

  <name>captureText</name>
  <description>A Cordova plugin that displays an alert popup dialog</description>

  <engines>
    <engine name="cordova" version=">=3.6.0" />
  </engines>

  <js-module src="www/testAlert.js" name="testalert">
    <clobbers target="testalert" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="plugin.xml" parent="/*">
      <feature name="com.captureTest">
        <param name="android-package" value="com.captureTest.testalert" />
      </feature>
    </config-file>
    <source-file src="src/android" target-dir="src/plugin/testalert" />
  </platform>
</plugin>